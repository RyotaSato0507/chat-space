.Chat
  .MainHeader
    .MainHeader__group
      %h3.MainHeader__groupName
        = @group.name
      %ul.MainHeader__memberList
        Member :
        %li.MainHeader__member
          - @group.users.each do |user|
            = user.name
    = link_to edit_group_path(current_user) ,class: "MainHeader__editButton" do
      Edit
  .MainChat
    = render @messages
    .MainChatBox
      .MessageBox
        .MainChatInfo
          .MainChatInfo__userName
          -# ユーザー名
          .MainChatInfo__date
          -# 2020/7/20 19:00
        .Message
          %p.MainChat__content
          -# こんにちは
      -# .MainChatInfo
      -#   .MainChatInfo__userName
      -#     -# ユーザー名
      -#   .MainChatInfo__date
      -#     -# 2020/7/20 19:15
      -# .Message
      -#   %p.MainChat__content
      -#     -# こんばんわ
  .MainBottomBar
    = form_with model: [@group, @message], html: {class: "Form"}, local: true do |f|
      .Form__contents
        = f.text_field :content, class: 'Form__inputContent', placeholder: 'type a message'
        = f.label :image, class: 'Form__inputImage' do
          = icon('far', 'image', class: 'Form__icon')
          = f.file_field :image, class: 'Hidden'
      = f.submit 'Send', class: 'Form__submit'
